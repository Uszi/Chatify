<%- JSON.stringify(flash.err) %>
<% if(flash && flash.err){ %>
<ul class="alert alert-danger">
	<% Object.keys(flash.err).forEach(function(error){ %>
	<li><%- JSON.stringify(flash.err[error]['name'][0]['message']) %></li>
	<% }); %>
</ul>
<% } %>
<form class="form-signin" action="/user/create" method="POST">
	<h2 class="form-signin-heading">Create Chatify room</h2>
	<input type="text" name="name" class="form-control" placeholder="Your login" autofocus>
	<button class="btn btn-lg btn-primary btn-block" type="submit">Create chat</button>
	<input type="hidden" name="_csrf" value="<%= _csrf %>" />
</form>